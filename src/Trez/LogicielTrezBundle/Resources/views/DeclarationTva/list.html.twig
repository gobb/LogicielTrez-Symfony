{%  extends 'TrezLogicielTrezBundle::layout.html.twig' %}
{% import 'TrezLogicielTrezBundle:Utils:forms.html.twig' as forms %}

{% block body %}
    <h1>Liste des déclarations de TVA</h1>

    <div>Liste à venir !</div>

    <div class="well">
        <form class="form-inline no-margin" action="{{ path('declaration_tva_list_factures') }}" {{ form_enctype(form) }} method="post">
            {{ form_widget(form.exercice, {'attr' : {'class': 'input-small'}}) }}
            <label>
                {{ form_widget(form.mois, { 'attr': {'class': 'date-selects'} }) }}
            </label>
            {{ form_rest(form) }}
            <input type="submit" class="btn btn-primary" value="Générer la déclaration de TVA">
        </form>

        <script type="text/javascript">
            // we set some values in useless selects and hide them
            $('#form_mois_day').val(1).hide();
        </script>
    </div>
{% endblock %}
